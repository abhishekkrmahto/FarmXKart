    <script>
      const img = document.getElementById("slider-image");
      const images = [
        "/images/sliders/slider1.jpg",
        "/images/sliders/slider3.jpg",
        "/images/sliders/slider5.jpg",
        "/images/sliders/slider7.jpg",
        "/images/sliders/slider8.jpg",
        "/images/sliders/slider9.jpg",
        "/images/sliders/slider10.jpg",
      ];
      let i = 0;
      setInterval(() => {
        img.classList.add("fade-out");
        setTimeout(() => {
          img.src = images[i];
          img.classList.remove("fade-out");
          i = (i + 1) % images.length;
        }, 500);
      }, 4000);
    </script>
